{
    "name": "jsonviewer",
    "displayName": "JSON Viewer",
    "description": "Preview JSON as tree view on VSCode",
    "version": "1.1.0",
    "publisher": "ccimage",
    "icon": "projecticon.png",
    "repository":{
        "type": "git",
        "url": "https://github.com/ccimage/jsonviewer"
    },
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onCommand:extension.viewJson"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.viewJson",
                "title": "Open in json viewer"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
